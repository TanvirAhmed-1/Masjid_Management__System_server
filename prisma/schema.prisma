generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
enum RoleType {
  SUPER_ADMIN
  ADMIN
  USER
  MEMBER
}

enum GenderType {
   MALE
  FEMALE
  OTHERS
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String     @unique
  password  String
  address   String
   role      RoleType   @default(USER)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  gender    GenderType
  @@map("user")
}
